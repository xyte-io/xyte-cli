{
  "name": "@xyte/cli",
  "version": "0.1.0",
  "description": "Xyte CLI, TUI, skills, and MCP bridge for zero-friction AI operations",
  "private": true,
  "license": "Apache-2.0",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "xyte-cli": "bin/xyte-cli"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "skills",
    "docs/schemas"
  ],
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "install:global": "npm run build && npm link",
    "uninstall:global": "npm unlink -g @xyte/cli || true",
    "reinstall:global": "npm run uninstall:global && npm run install:global",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "tui": "tsx src/bin/xyte-cli.ts tui"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@types/pdfkit": "^0.17.4",
    "ajv": "^8.17.1",
    "blessed": "^0.1.81",
    "commander": "^14.0.3",
    "pdfkit": "^0.17.2",
    "pino": "^10.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
